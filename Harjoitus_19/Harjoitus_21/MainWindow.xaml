<Window x:Class="TuoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tuote Sovellus" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Valitse tuotteet:" FontWeight="Bold" FontSize="16" Margin="10"/>

            <CheckBox x:Name="chkTuote1" Content="Tuote 1" Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox x:Name="chkTuote2" Content="Tuote 2" Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox x:Name="chkTuote3" Content="Tuote 3" Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <CheckBox x:Name="chkTuote4" Content="Tuote 4" Margin="5" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>

            <Button x:Name="btnOsta" Content="Osta" Margin="10" Click="btnOsta_Click"/>

            <TextBlock Text="Ostoskorisi:" FontWeight="Bold" FontSize="16" Margin="10"/>
            <StackPanel x:Name="stackPanelOstoskori" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
