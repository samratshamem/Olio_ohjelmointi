<Window x:Class="WPF_Laskin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Laskin" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="Luku1" Grid.Row="0" Margin="10" HorizontalAlignment="Stretch"/>
        <TextBox x:Name="Luku2" Grid.Row="1" Margin="10" HorizontalAlignment="Stretch"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SummaButton" Content="Summa" Click="Laske_Click" Margin="5"/>
            <Button x:Name="ErotusButton" Content="Erotus" Click="Laske_Click" Margin="5"/>
            <Button x:Name="KertolaskuButton" Content="Kertolasku" Click="Laske_Click" Margin="5"/>
            <Button x:Name="JakolaskuButton" Content="Jakolasku" Click="Laske_Click" Margin="5"/>
        </StackPanel>

        <TextBlock x:Name="Tulos" Grid.Row="3" Margin="10" HorizontalAlignment="Center"/>
    </Grid>
</Window>